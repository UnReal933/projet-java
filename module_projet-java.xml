<?xml version="1.0" encoding="UTF-8"?>
<project name="module_projet-java" default="compile.module.projet-java">
  <dirname property="module.projet-java.basedir" file="${ant.file.module_projet-java}"/>
  
  <property name="module.jdk.home.projet-java" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.projet-java" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.projet-java" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.projet-java" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="projet-java.output.dir" value="${module.projet-java.basedir}/out/production/projet-java"/>
  <property name="projet-java.testoutput.dir" value="${module.projet-java.basedir}/out/test/projet-java"/>
  
  <path id="projet-java.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="projet-java.module.production.classpath">
    <path refid="${module.jdk.classpath.projet-java}"/>
  </path>
  
  <path id="projet-java.runtime.production.module.classpath">
    <pathelement location="${projet-java.output.dir}"/>
  </path>
  
  <path id="projet-java.module.classpath">
    <path refid="${module.jdk.classpath.projet-java}"/>
    <pathelement location="${projet-java.output.dir}"/>
  </path>
  
  <path id="projet-java.runtime.module.classpath">
    <pathelement location="${projet-java.testoutput.dir}"/>
    <pathelement location="${projet-java.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.projet-java">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.projet-java">
    <patternset refid="excluded.from.module.projet-java"/>
  </patternset>
  
  <path id="projet-java.module.sourcepath">
    <dirset dir="${module.projet-java.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.projet-java" depends="compile.module.projet-java.production,compile.module.projet-java.tests" description="Compile module projet-java"/>
  
  <target name="compile.module.projet-java.production" depends="register.custom.compilers" description="Compile module projet-java; production classes">
    <mkdir dir="${projet-java.output.dir}"/>
    <javac2 destdir="${projet-java.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.projet-java}/javac">
      <compilerarg line="${compiler.args.projet-java}"/>
      <bootclasspath refid="projet-java.module.bootclasspath"/>
      <classpath refid="projet-java.module.production.classpath"/>
      <src refid="projet-java.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.projet-java"/>
    </javac2>
    
    <copy todir="${projet-java.output.dir}">
      <fileset dir="${module.projet-java.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.projet-java.tests" depends="register.custom.compilers,compile.module.projet-java.production" description="compile module projet-java; test classes" unless="skip.tests"/>
  
  <target name="clean.module.projet-java" description="cleanup module">
    <delete dir="${projet-java.output.dir}"/>
    <delete dir="${projet-java.testoutput.dir}"/>
  </target>
</project>